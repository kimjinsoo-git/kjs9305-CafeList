<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:background="@drawable/button_round"
    android:elevation="3dp"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/main_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="치킨"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/item_search_xicon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/xicon"
            app:layout_constraintBottom_toBottomOf="@+id/main_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_category" />


    </androidx.constraintlayout.widget.ConstraintLayout>